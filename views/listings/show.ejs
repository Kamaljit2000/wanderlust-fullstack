<% layout("/layouts/boilerplate.ejs") %>
  <div class="row mt-5">
    <div class="col-8 offset-2">
    <h3 class="mb-3">Listing Details:</h3>
    </div>
    <div class="card col-7 offset-2 show-card" >
       <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
       <div class="card-body mt-2">
       <p class="card-text">
        <b> <%= listing.title %></b><br>
        <%= listing.description %> <br>
        &#8377 <%= listing.price %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
        </p>
       </div>
    </div>

    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  offset-2 show-edit-btn">Edit</a>
       
    
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark   offset-2">Delete </button>
        </form>
    </div>
  </div>
  

